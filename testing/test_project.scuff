let variable_for_all_sprites: string = "";
let variable_for_sprite_only: bool = false;

event flag_clicked {
	test_function("balls", (1 == 1));
}

event key_pressed(space) {
	test_function("balls", (1 == 1));
}


event key_pressed(z) {
	test_function("balls", (1 == 1));
}

event key_pressed(0) {
	test_function("balls", (1 == 1));
}

function test_function(number_or_text_input: string, boolean_input: bool) -> void {
	variable_for_all_sprites = number_or_text_input;
	variable_for_sprite_only = boolean_input;
}

